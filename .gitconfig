[commit]
	# gpgSign = true

[core]
	editor = vim

[diff]
	tool = vimdiff

[difftool]
	prompt = false

[include]
	path = ~/.gitconfig-secrets

[merge]
	conflictstyle = diff3
	ff = only
	tool = vimdiff

[mergetool]
	keepBackup = false
	prompt = false

[push]
	default = simple
	followTags = true

[status]
	showUntrackedFiles = all
